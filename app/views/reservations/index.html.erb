<div class="container-fluid">
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-4">Reservations Made</h1>
      <p class="lead">All reservations you current have made on other peoples listings</p>
      <hr>
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <% @reservations.each do |res| %>
          <div class="carousel-item active">
            <div class="card text-center mx-auto" style="width: 18rem;">
              <div class="card-body">
                <h5 class="card-title"><%= res.listing.title %></h5>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item">Check In: <%= res.check_in %></li>
                  <li class="list-group-item">Check Out: <%= res.check_out %></li>
                  <li class="list-group-item">Guests <%= res.guests %></li>
                </ul>
                <%= link_to 'Cancel Reservation', listing_reservation_path(res.id), method: :delete, data: { confirm: "Are you sure you wish to cancel this reservation?" }, remote: true %>
              </div>
            </div>
          </div>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>

