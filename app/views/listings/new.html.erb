<h1> Create a New Listing </h1>

<%= form_with url: listings_path, scope: :listing, local: true do |f| %>
  <div class="field" >
    <%= f.label :name %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :property_type %>
    <%= f.select :property_type, options_for_select(Listing.property_type) %>
  </div>

  <div class="field" >
    <%= f.label :number_of_guests %>
    <%= f.text_field :guests %>
  </div>

  <div class="field" >
    <%= f.label :number_of_bedrooms %>
    <%= f.text_field :bedrooms %>
  </div>

  <div class="field" >
    <%= f.label :number_of_bathrooms %>
    <%= f.text_field :bathrooms %>
  </div>

  <div class="field" >
    <%= f.label :price_per_night %>
    <%= f.text_field :price_per_night %>
  </div>

  <div class="field" >
    <%= f.label :address_line1 %>
    <%= f.text_field :address_line1 %>
  </div>

  <div class="field" >
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class="field" >
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>

  <div class="field" >
    <%= f.label :postcode %>
    <%= f.text_field :postcode %>
  </div>

  <div class="field" >
    <%= f.label :country %>
    <%= f.select :country, options_for_select(User.country_list) %>
  </div>

    <%= f.submit "Save Listing" %>

<% end %>