<!DOCTYPE html>
<html>
<head>
  <%= javascript_include_tag 'application' %>
  <%= stylesheet_link_tag 'application' %>
  <%= csrf_meta_tag %>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">AnotherBnB</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <%= link_to "Become A Host", new_listing_path, class:"nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "View Listings", listings_path, class:"nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "My Profile", user_path(current_user.id), class:"nav-link" %>
        </li>
        <li class="nav-item">
          <a class="nav-link disabled" href="#">Disabled</a>
        </li>
      </ul>
      <div id="header">
        <% if signed_in? -%>
          <%= button_to t(".sign_out"), sign_out_path, method: :delete %>
        <% else -%>
          <%= link_to t(".sign_in"), sign_in_path %>
        <% end -%>
      </div>
    </div>
  </nav>

  <div id="flash">
    <% flash.each do |key, value| -%>
      <div id="flash_<%= key %>"><%=h value %></div>
    <% end %>
  </div>

  <%= yield %>
</body>
</html>
